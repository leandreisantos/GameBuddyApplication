<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:background="@drawable/bg_input_login"
    android:layout_margin="10dp">

    <androidx.cardview.widget.CardView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/cardView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="5dp"
        app:cardCornerRadius="25dp"
        app:cardBackgroundColor="@android:color/white"
        android:layout_gravity="center_vertical"
        app:cardPreventCornerOverlap="false"
        android:elevation="8dp">


        <ImageView
            android:id="@+id/imageView_request"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:clickable="true"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_baseline_person_24" />
    </androidx.cardview.widget.CardView>

    <TextView
        app:layout_constraintLeft_toRightOf="@id/cardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_request_name_item"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Name"
        android:layout_marginStart="10dp"
        android:textSize="15sp"/>

    <TextView
        android:layout_width="130dp"
        android:layout_height="30dp"
        android:text="Accept"
        android:id="@+id/accept_request"
        android:textColor="@color/white"
        android:padding="5dp"
        android:layout_marginStart="10dp"
        android:textAlignment="center"
        app:layout_constraintLeft_toRightOf="@id/cardView"
        app:layout_constraintTop_toBottomOf="@id/tv_request_name_item"
        android:layout_marginTop="10dp"
        android:background="@drawable/border_btn"/>

    <TextView
        android:layout_width="130dp"
        android:layout_height="30dp"
        android:text="Decline"
        android:id="@+id/decline_request"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:padding="5dp"
        app:layout_constraintTop_toBottomOf="@id/tv_request_name_item"
        app:layout_constraintLeft_toRightOf="@id/accept_request"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_decline"/>

