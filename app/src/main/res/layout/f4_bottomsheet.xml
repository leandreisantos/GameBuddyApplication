<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:background="@drawable/bottom_sheet_background"
    android:layout_height="match_parent">

    <TextView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Post"
        android:textColor="@color/white"
        android:id="@+id/tv_cpf4"
        android:padding="3dp"
        android:layout_margin="3dp"
        android:drawableStart="@drawable/create_post_icon"
        android:drawablePadding="10dp"
        android:textSize="20sp"/>

    <TextView
        app:layout_constraintTop_toBottomOf="@id/tv_cpf4"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Report"
        android:textColor="@color/white"
        android:id="@+id/tv_report"
        android:padding="3dp"
        android:layout_margin="3dp"
        android:drawableStart="@drawable/report_icon"
        android:drawablePadding="10dp"
        android:textSize="20sp"/>
    <TextView
        app:layout_constraintTop_toBottomOf="@id/tv_report"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete Community"
        android:textColor="@color/white"
        android:id="@+id/tv_delete"
        android:padding="3dp"
        android:layout_margin="3dp"
        android:drawableStart="@drawable/ic_outline_delete_24"
        android:drawablePadding="10dp"
        android:textSize="20sp"/>

    <TextView
        app:layout_constraintTop_toBottomOf="@id/tv_delete"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Member"
        android:textColor="@color/white"
        android:id="@+id/tv_member"
        android:padding="3dp"
        android:layout_margin="3dp"
        android:drawableStart="@drawable/group_icon"
        android:drawablePadding="10dp"
        android:textSize="20sp"/>

    <TextView
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/tv_report"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Story"
        android:padding="3dp"
        android:textColor="@color/white"
        android:id="@+id/tv_csf4"
        android:layout_margin="3dp"
        android:textSize="20sp"/>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/loginlot"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="20dp"
        app:lottie_rawRes="@raw/bpostlot"
        app:lottie_loop="true"
        android:layout_marginTop="10dp"
        app:lottie_autoPlay="true" />

</androidx.constraintlayout.widget.ConstraintLayout>