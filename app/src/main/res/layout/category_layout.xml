        android:textColor="@color/white"
        android:textSize="15sp"
        android:fontFamily="sans-serif-black"
        android:padding="7dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lifestyle"
        android:id="@+id/tvLs"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:fontFamily="sans-serif-black"
        android:padding="7dp"/>

