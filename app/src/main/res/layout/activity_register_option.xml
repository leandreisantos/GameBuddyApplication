<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".RegisterOptionActivity">

            <TextView
                android:id="@+id/tv_close_ro"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_round_close_24"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_margin="20dp"/>

            <TextView
                android:id="@+id/tv_title_ro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Register Option"
                android:textColor="@color/white"
                android:fontFamily="@font/baloo"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="50dp"
                android:textSize="25sp"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                app:layout_constraintTop_toBottomOf="@id/tv_title_ro"
                android:layout_marginTop="20dp"
                android:padding="20dp"
                android:id="@+id/cl2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv1"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    app:cardCornerRadius="5dp"
                    app:cardBackgroundColor="@color/secondary_background"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent">

                    <TextView
                        android:id="@+id/tv_gamer_ro"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Gamer"
                        android:padding="20dp"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:drawablePadding="10dp"
                        android:drawableStart="@drawable/ic_baseline_person_24"
                        android:gravity="center_vertical"
                        android:fontFamily="@font/baloo"/>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv2"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    app:cardCornerRadius="5dp"
                    android:layout_marginTop="20dp"
                    app:cardBackgroundColor="@color/secondary_background"
                    app:layout_constraintTop_toBottomOf="@id/cv1"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent">

                    <TextView
                        android:id="@+id/tv_com_ro"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Company"
                        android:paddingStart="20dp"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:drawablePadding="10dp"
                        android:drawableStart="@drawable/company_icon"
                        android:gravity="center_vertical"
                        android:fontFamily="@font/baloo"/>

                </androidx.cardview.widget.CardView>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/loginlot"
                android:layout_width="300dp"
                android:layout_height="300dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:lottie_rawRes="@raw/optionlot"
                app:lottie_loop="true"
                app:lottie_autoPlay="true" />

</androidx.constraintlayout.widget.ConstraintLayout>