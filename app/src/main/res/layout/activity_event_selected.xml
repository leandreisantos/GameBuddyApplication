<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:padding="10dp"
    tools:context=".EventSelectedActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/back_aes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_back"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/more_aes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/more_vertical_icon"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:id="@+id/tv_title_aes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Let's Join this game!"
                android:textColor="@color/white"
                android:fontFamily="sans-serif"
                android:textSize="25sp"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/tv_title_aes"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="20dp"
                app:layout_constraintRight_toRightOf="parent"
                android:id="@+id/aes_cl1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginTop="10dp"
                    android:id="@+id/cr_lbl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Creator"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:layout_marginStart="10dp"
                    android:fontFamily="sans-serif"/>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvc1_aes"
                    android:layout_marginTop="5dp"
                    app:layout_constraintTop_toBottomOf="@id/cr_lbl"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_width="match_parent"
                    app:cardCornerRadius="10dp"
                    app:cardBackgroundColor="@color/secondary_background"
                    android:layout_height="wrap_content">


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_margin="20dp"
                        android:layout_height="match_parent">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cvc_iv"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            app:cardBackgroundColor="@android:color/transparent"
                            app:cardCornerRadius="25sp">

                            <ImageView
                                android:id="@+id/iv_aes"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>


                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:id="@+id/tvc_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toTopOf="@id/tvc_prof"
                            android:text="Leandrei Santos"
                            android:textColor="@color/white"
                            android:fontFamily="sans-serif"
                            android:textSize="15sp"
                            android:layout_marginStart="10dp"
                            app:layout_constraintLeft_toRightOf="@id/cvc_iv"/>

                        <TextView
                            android:id="@+id/tvc_prof"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Profession"
                            android:textColor="@color/grey"
                            android:textSize="15sp"
                            android:fontFamily="sans-serif"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toRightOf="@id/cvc_iv"
                            app:layout_constraintTop_toBottomOf="@id/tvc_name"
                            android:layout_marginStart="10dp"/>

                        <androidx.cardview.widget.CardView
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            app:cardCornerRadius="20dp"
                            app:cardBackgroundColor="@color/icon">


                            <TextView
                                android:id="@+id/tv_aes_goToProfile"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/next_btn_icon"
                                android:layout_gravity="center"/>

                        </androidx.cardview.widget.CardView>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/cvc3_aes"
                    android:layout_marginTop="5dp"
                    app:layout_constraintTop_toBottomOf="@id/cvc1_aes"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_width="match_parent"
                    app:cardCornerRadius="10dp"
                    app:cardBackgroundColor="@color/secondary_background"
                    android:layout_height="wrap_content">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:padding="10dp"
                        android:layout_height="match_parent">

                        <TextView
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            android:layout_marginTop="10dp"
                            android:id="@+id/time_lbl"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Agust 10-"
                            android:textColor="@color/grey"
                            android:textSize="15sp"
                            android:layout_marginStart="10dp"
                            android:fontFamily="sans-serif"/>

                        <TextView
                            app:layout_constraintTop_toBottomOf="@id/time_lbl"
                            app:layout_constraintLeft_toLeftOf="parent"
                            android:layout_marginTop="10dp"
                            android:id="@+id/caption_lbl"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="This is your caption!"
                            android:textColor="@color/white"
                            android:textSize="15sp"
                            android:layout_marginBottom="10dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginStart="10dp"
                            android:fontFamily="sans-serif"/>



                    </androidx.constraintlayout.widget.ConstraintLayout>


                </androidx.cardview.widget.CardView>




            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/aes_cl2"
                app:layout_constraintTop_toBottomOf="@id/aes_cl1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <androidx.cardview.widget.CardView
                    android:id="@+id/cvc2_aes"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    app:cardBackgroundColor="@color/secondary_background"
                    app:cardCornerRadius="10dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/iv_event_aes"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:scaleType="centerCrop" />


                </androidx.cardview.widget.CardView>


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_int"
                android:layout_width="200dp"
                android:layout_height="50dp"
                app:layout_constraintTop_toBottomOf="@id/aes_cl2"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="10dp"
                android:background="@drawable/border_btn">


                <TextView
                    android:id="@+id/tv_int_es"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Interested"
                    android:textColor="@color/white"
                    android:drawableStart="@drawable/not_interested_icon"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:gravity="center_vertical"
                    app:layout_constraintBottom_toBottomOf="parent"/>



            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_going"
                android:layout_width="180dp"
                android:layout_height="50dp"
                app:layout_constraintTop_toBottomOf="@id/aes_cl2"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="10dp"
                android:background="@drawable/border_btn">


                <TextView
                    android:id="@+id/tv_going_es"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Going"
                    android:textColor="@color/white"
                    android:drawableStart="@drawable/going_icon"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:gravity="center_vertical"
                    app:layout_constraintBottom_toBottomOf="parent"/>



            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/tv_loc_es"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Event Location"
                android:drawableStart="@drawable/location_icon"
                android:textColor="@color/grey"
                android:gravity="center"
                android:drawablePadding="10dp"
                android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@id/cl_going"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="20dp"/>

            <TextView
                android:id="@+id/tv_time_es"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Event Time"
                android:drawableStart="@drawable/time_icon"
                android:textColor="@color/grey"
                android:gravity="center"
                android:drawablePadding="10dp"
                android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@id/tv_loc_es"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="20dp"/>

            <TextView
                android:id="@+id/tv_date_es"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Event Date"
                android:drawableStart="@drawable/date_icon"
                android:textColor="@color/grey"
                android:gravity="center"
                android:drawablePadding="10dp"
                android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@id/tv_time_es"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="20dp"/>

            <TextView
                android:id="@+id/tv_game_es"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Event Game"
                android:drawableStart="@drawable/game_developer_icon"
                android:textColor="@color/grey"
                android:gravity="center"
                android:drawablePadding="10dp"
                android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@id/tv_date_es"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="20dp"/>

            <TextView
                android:id="@+id/lbl_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="What to expect"
                app:layout_constraintTop_toBottomOf="@id/tv_game_es"
                android:textColor="@color/white"
                app:layout_constraintLeft_toLeftOf="parent"
                android:textSize="20sp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/tv_desc_es"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Event desc"
                android:textColor="@color/grey"
                android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@id/lbl_desc"
                app:layout_constraintLeft_toLeftOf="parent"/>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv_desc_es"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="50dp"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="@color/secondary_background"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="20dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/lbl_creator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Event Creator"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        android:layout_marginTop="20dp"/>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv_creator"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        app:cardCornerRadius="100dp"
                        app:layout_constraintTop_toBottomOf="@id/lbl_creator"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_marginTop="20dp">

                        <ImageView
                            android:id="@+id/iv_creator_es"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"/>



                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/tv_name_creator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        app:layout_constraintTop_toBottomOf="@id/cv_creator"
                        android:textColor="@color/white"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_marginTop="10dp"
                        android:text="Creator Name"/>

                    <TextView
                        android:id="@+id/tv_profile_es"
                        android:layout_width="200dp"
                        android:layout_height="50dp"
                        android:text="View Profile"
                        android:background="@drawable/border_btn"
                        android:textColor="@color/white"
                        app:layout_constraintTop_toBottomOf="@id/tv_name_creator"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:gravity="center"
                        android:layout_marginTop="20dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginBottom="20dp"/>






                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.cardview.widget.CardView>








        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>