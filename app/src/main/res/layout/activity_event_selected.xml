<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:padding="10dp"
    tools:context=".EventSelectedActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/back_aes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_back"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/more_aes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/more_vertical_icon"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:id="@+id/tv_title_aes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Let's Join this game!"
                android:textColor="@color/white"
                android:fontFamily="sans-serif"
                android:textSize="25sp"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                app:layout_constraintTop_toBottomOf="@id/tv_title_aes"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="20dp"
                app:layout_constraintRight_toRightOf="parent"
                android:id="@+id/aes_cl1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginTop="10dp"
                    android:id="@+id/cr_lbl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Creator"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:layout_marginStart="10dp"
                    android:fontFamily="sans-serif"/>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvc1_aes"
                    android:layout_marginTop="5dp"
                    app:layout_constraintTop_toBottomOf="@id/cr_lbl"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_width="match_parent"
                    app:cardCornerRadius="10dp"
                    app:cardBackgroundColor="@color/secondary_background"
                    android:layout_height="wrap_content">


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_margin="20dp"
                        android:layout_height="match_parent">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cvc_iv"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            app:cardBackgroundColor="@android:color/transparent"
                            app:cardCornerRadius="25sp">

                            <ImageView
                                android:id="@+id/iv_aes"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>


                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:id="@+id/tvc_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toTopOf="@id/tvc_prof"
                            android:text="Leandrei Santos"
                            android:textColor="@color/white"
                            android:fontFamily="sans-serif"
                            android:textSize="15sp"
                            android:layout_marginStart="10dp"
                            app:layout_constraintLeft_toRightOf="@id/cvc_iv"/>

                        <TextView
                            android:id="@+id/tvc_prof"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Profession"
                            android:textColor="@color/grey"
                            android:textSize="15sp"
                            android:fontFamily="sans-serif"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toRightOf="@id/cvc_iv"
                            app:layout_constraintTop_toBottomOf="@id/tvc_name"
                            android:layout_marginStart="10dp"/>

                        <androidx.cardview.widget.CardView
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            app:cardCornerRadius="20dp"
                            app:cardBackgroundColor="@color/icon">


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/next_btn_icon"
                                android:layout_gravity="center"/>

                        </androidx.cardview.widget.CardView>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/cvc3_aes"
                    android:layout_marginTop="5dp"
                    app:layout_constraintTop_toBottomOf="@id/cvc1_aes"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_width="match_parent"
                    app:cardCornerRadius="10dp"
                    app:cardBackgroundColor="@color/secondary_background"
                    android:layout_height="wrap_content">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:padding="10dp"
                        android:layout_height="match_parent">

                        <TextView
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            android:layout_marginTop="10dp"
                            android:id="@+id/time_lbl"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Agust 10-"
                            android:textColor="@color/grey"
                            android:textSize="15sp"
                            android:layout_marginStart="10dp"
                            android:fontFamily="sans-serif"/>

                        <TextView
                            app:layout_constraintTop_toBottomOf="@id/time_lbl"
                            app:layout_constraintLeft_toLeftOf="parent"
                            android:layout_marginTop="10dp"
                            android:id="@+id/caption_lbl"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="This is your caption!"
                            android:textColor="@color/white"
                            android:textSize="15sp"
                            android:layout_marginBottom="10dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginStart="10dp"
                            android:fontFamily="sans-serif"/>



                    </androidx.constraintlayout.widget.ConstraintLayout>


                </androidx.cardview.widget.CardView>




            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/aes_cl2"
                app:layout_constraintTop_toBottomOf="@id/aes_cl1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <androidx.cardview.widget.CardView
                    android:id="@+id/cvc2_aes"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    app:cardBackgroundColor="@color/secondary_background"
                    app:cardCornerRadius="10dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/iv_event_aes"
                        android:layout_width="match_parent"
                        android:layout_height="400dp"
                        android:scaleType="centerCrop" />


                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/aes_likes_tv"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/ic_baseline_dislike_24"
                    app:layout_constraintTop_toBottomOf="@id/cvc2_aes"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:id="@+id/aes_comment_tv"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/ic_baseline_comment_24"
                    app:layout_constraintTop_toBottomOf="@id/cvc2_aes"
                   app:layout_constraintLeft_toRightOf="@id/aes_likes_tv"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:id="@+id/aes_share_tv"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/share_icon"
                    app:layout_constraintTop_toBottomOf="@id/cvc2_aes"
                    app:layout_constraintLeft_toRightOf="@id/aes_comment_tv"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>